<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.gotowanko.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" >
    </uses-feature>

    <application
        android:name="pl.gotowanko.android.base.GotowankoApplication"
        android:allowBackup="true"
        android:icon="@drawable/rondel"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateTrainingMainActivity"
            android:label="@string/title_activity_create_training_main" >
        </activity>
        <activity
            android:name=".CreateTrainingCardActivity"
            android:label="@string/title_activity_create_training_card" >
        </activity>
        <activity
            android:name=".IngredientsActivity"
            android:label="@string/title_activity_ingredients" >
        </activity>
        <activity
            android:name=".TrainingActivity"
            android:label="@string/title_activity_training" >
        </activity>
        <activity
            android:name=".TrainingCardActivity"
            android:label="@string/title_activity_training_card" >
        </activity>
    </application>

</manifest>